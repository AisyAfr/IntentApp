<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="160sp"
        />

    <Button
        android:id="@+id/btn_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="winner"
        app:layout_constraintTop_toBottomOf="@id/hello_world"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btn_intent_bersama_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lolos Dari MPL ID Bersama"
        app:layout_constraintTop_toBottomOf="@id/btn_move"/>

    <Button
        android:id="@+id/btn_intent_bersama_data_dan_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yang Gak Lolos Playoffs"
        app:layout_constraintTop_toBottomOf="@id/btn_intent_bersama_data"/>


</androidx.constraintlayout.widget.ConstraintLayout>